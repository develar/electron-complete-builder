{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "removeComments": true,
    "outDir": "out",
    "newLine": "LF",
    "noResolve": true,
    "noEmitOnError": true,
    "inlineSources": true,
    "sourceMap": true
  },
  "filesGlob": [
    "src/*.ts",
    "typings/**/*.d.ts"
  ],
  "files": [
    "typings/bluebird/bluebird.d.ts",
    "typings/command-line-args.d.ts",
    "typings/electron-packager/electron-packager.d.ts",
    "typings/gh-api.d.ts",
    "typings/node/node.d.ts",
    "typings/rimraf/rimraf.d.ts",
    "typings/source-map-support/source-map-support.d.ts",
    "src/build-cli.ts",
    "src/codeSign.ts",
    "src/gitHubPublisher.ts",
    "src/httpRequest.ts",
    "src/install-app-deps.ts",
    "src/packager.ts",
    "src/promise.ts",
    "src/util.ts"
  ]
}
