{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "removeComments": true,
    "outDir": "out",
    "newLine": "LF",
    "noResolve": true,
    "noEmitOnError": true,
    "inlineSources": true,
    "sourceMap": true
  },
  "filesGlob": [
    "src/*.ts",
    "typings/**/*.d.ts"
  ],
  "files": [
    "typings/gh-got.d.ts",
    "typings/node/node.d.ts",
    "typings/run.d.ts",
    "src/build-cli.ts",
    "src/codeSign.ts",
    "src/githubPublisher.ts",
    "src/httpRequest.ts",
    "src/install-app-deps.ts",
    "src/Packager.ts",
    "src/util.ts"
  ]
}
