{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "removeComments": true,
    "outDir": "out",
    "newLine": "LF",
    "noResolve": true,
    "noEmitOnError": true,
    "inlineSources": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noEmitHelpers": true,
    "noFallthroughCasesInSwitch": true
  },
  "filesGlob": [
    "src/*.ts",
    "typings/**/*.d.ts"
  ],
  "files": [
    "typings/appdmg.d.ts",
    "typings/bluebird.d.ts",
    "typings/command-line-args.d.ts",
    "typings/electron-packager/electron-packager.d.ts",
    "typings/fs-extra/fs-extra.d.ts",
    "typings/gh-api.d.ts",
    "typings/hosted-git-info.d.ts",
    "typings/json-parse-helpfulerror.d.ts",
    "typings/mime/mime.d.ts",
    "typings/node/node.d.ts",
    "typings/progress-stream.d.ts",
    "typings/progress/progress.d.ts",
    "typings/rimraf/rimraf.d.ts",
    "typings/source-map-support/source-map-support.d.ts",
    "src/awaiter.ts",
    "src/build-cli.ts",
    "src/builder.ts",
    "src/codeSign.ts",
    "src/gitHubPublisher.ts",
    "src/gitHubRequest.ts",
    "src/httpRequest.ts",
    "src/install-app-deps.ts",
    "src/packager.ts",
    "src/promise.ts",
    "src/promisifed-fs.ts",
    "src/repositoryInfo.ts",
    "src/util.ts"
  ]
}
